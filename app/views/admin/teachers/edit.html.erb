<%= simple_form_for @teacher_profile do |f| %>
  <h1> personal inforamtion </h1>
    <%= f.input :first_name%>
    <%= f.input :last_name%>
    <%= f.input :street_address%>
    Apt #
    <%= f.input :email, label: false, placeholder: 'Enter Email' %>

  <div class='form-group'>
    <%= label_tag 'postal_code', 'Postal Code'%> <%= current_user.postal_code%>
  </div>

  <div class='form-group'>
    <%= f.label :city, '*City' %>
    <%= f.text_field :city, class: 'form-control' %>
  </div>

  <!-- <div class='form-group'>
    <%#= f.label :hear_of_site, 'How did you hear of network' %>
    <%#= f.text_field :hear_of_site, class: 'form-control' %>
  </div> -->

  <div class='form-group'>
    <%= f.label :home_phone, '*Home Phone' %>
    <%= f.text_field :home_phone, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :cell_phone, '*Cell Phone' %>
    <%= f.text_field :cell_phone, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :date_of_birth, 'Date of birth' %>
    <%= f.date_select :date_of_birth, :start_year=>1900 %>
  </div>

  <div class='form-group'>
    <%= f.label :language, '*Languages Spoken' %>
    <%= f.text_field :language, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :work, 'ABILITY TO WORK' %>
    <%= f.text_field :work, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :legal_to_work, '*Are you legally able to work in Canada? (Have SIN or applied for it):' %>
    <%= f.select :legal_to_work, options_for_select(option_with_na), class: 'form-control' %>
  </div>
  <!-- <div class='form-group'>
    <%#= label_tag 'Email' %> <%= current_user.email%>
  </div> -->
  <!-- <h1> personal inforamtion </h1> -->
  <div class='form-group'>
    <%= f.label :apartment, 'Apartment:' %>
    <%= f.text_field :apartment, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :floor, '*If Apartment, what floor?' %>
    <%= f.text_field :floor, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :condo, '*If Apartment, is this a Condo?' %>
    <%= f.select :condo, options_for_select(choose_option), class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :house, 'House:' %>
    <%= f.text_field :house, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :basement_premises, '*Is child care space in the basement of the premises?' %>
    <%= f.select :basement_premises, options_for_select(choose_option), class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :two_exit, '*Are there two exits?' %>
    <%= f.select :two_exit, options_for_select(choose_option), class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :home_smoke, '*Smoking in home:' %>
    <%= f.select :home_smoke, options_for_select(choose_option), class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :pet, '*Pets in home?' %>
    <%= f.select :pet, options_for_select(choose_option), class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :vaccine, '*Vaccinations are current?' %>
    <%= f.select :vaccine, options_for_select(option_with_na), class: 'form-control' %>
  </div>

  <h4> CHILDREN IN HOME: </h4>
  <div id='children'>
    <%= f.simple_fields_for :children do |child| %>
      <%= render 'child_fields', :f => child %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'add child', f, :children %>
    </div>
  </div>



  <%#= f.semantic_fields_for :children do |child| %>
    <%#= render 'child_field', f: child %>
  <%# end %>
  <%#= f.link_to_add 'Add contact', :children  %>

  <div class="form-group">
    <%= f.label :goal, 'GOAL:'%>
    <%= f.text_field :goal, class: 'form-control'%>
  </div>

  <div class='form-group'>
    <%= f.label :age_range, '*Age range you want to have?' %>
    <%= f.text_field :age_range, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :local_school, '*Are you willing to take children to local schools?' %>
    <%= f.select :local_school, options_for_select(choose_option), class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :school_name, '*Name of School(s):' %>
    <%= f.text_area :school_name, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :comments, '*Comments' %>
    <%= f.text_area :comments, class: 'form-control' %>
  </div>

  <div class='actions'>
    <button name="button" type="submit">Update
    </button>
  </div>
<% end %>