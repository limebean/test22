<h1>Teachers applications</h1>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Postal Code</th>
      <th colspan="5">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %></td>
        <td><%= teacher.email %></td>
        <td><%= teacher.postal_code %></td>
        <% if teacher.approve %>
          <td><%= link_to 'Edit Profile', edit_profile_admin_teacher_path(teacher)%></td>
          <td><%= link_to 'Edit Page', teacher_profile_path(teacher.teacher_profile) %></td>
          <% if teacher.teacher_profile.present? %>
            <td><%= link_to 'Show', teacher_profile_path(teacher.teacher_profile) %></td>
          <% end %>
          <td><%= link_to 'Reject', reject_admin_teacher_path(teacher), method: :patch %></td>
          <td><%= link_to 'Set Price', price_admin_teacher_path(teacher), method: :get %></td>
        <% else%>
          <td><%= link_to 'Approve', approve_admin_teacher_path(teacher), method: :patch %></td>
          <td></td>
          <td></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>
