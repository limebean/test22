<section class="contact_us col-md-12 col-sm-12 col-xs-12">
	<div class="center_area_content">
		<h2 class="conatct_heading">Contact Us</h2>
		<div class="col-md-6 col-sm-12 col-xs-12 no_padding_default">
			<p>The greatest happiness is family happiness. Give your family the joy of Dreamschool and our DreamCare App</p>
			<%= form_tag '/',class:'contact_form_fields' do %>
				<div class="col-sm-12 col-xs-12 no_padding_default">  
			  	<%= text_field_tag :name,nil,class:'name',placeholder:'Name *' %>
			  </div>
				<div class="col-sm-12 col-xs-12 no_padding_default">
			  	<%= text_field_tag :email,nil,class:'Email',placeholder:'Email *' %>
			  </div>
				<div class="col-sm-12 col-xs-12 no_padding_default">
			  	<%= text_field_tag :subject,nil,class:'Subject',placeholder:'Subject' %>
			  </div>
			  <div class="col-sm-12 col-xs-12 no_padding_default">
			  	<%= text_area_tag :message_body,nil, class:'message',:size =>"9x6",placeholder:'Message' %>
			  </div>
			  <%= submit_tag "Send",class:'submit_send_contact_info' %>    
			<% end %>
		</div>
		<div class="col-md-6 col-sm-12 col-xs-12 desktop_content">
			<p>For all inquiries, please complete the form to the left. More details will follow. Stay tuned!</p>
			<div class="style-imknta49" id="comp-imot2ny2"><div id="comp-imot2ny2line" class="style-imknta49line"></div></div>
			<address class="address_of_org">
				Centre for Social Innovation
				585 Dundas St. East, Torotno
			</address>
			<br>
		</div>
	</div>
</section>
