<div class="add_child_form form_of_calender">
  <p class="under_form_details">Before applying to enroll, please tell us a little more about your child.</p>
  <%= form_for @child do |f| %>
    <%= f.label :full_name,'Name',class:'heading_label' %>
    <%= f.text_field :full_name, placeholder: 'Full Name', class:'bottom_space comments' %>
    <br>
    <%= f.label :date_of_birth,'BIRTHDAY',class:'heading_label' %>
    <%= f.text_field :date_of_birth, placeholder:'MM/DD/YYYY' ,class:'bottom_space comments'%>
    <br>
    <%= f.label :place_of_birth,'Place of Birth',class:'heading_label' %>
    <%= f.text_field :place_of_birth, Placeholder: 'Place of Birth',class:'bottom_space comments' %>
    <%= f.hidden_field :parent_id ,value:"#{current_user.id}"%>
    <%= f.hidden_field :teacher_profile_id ,value:"#{TeacherProfile.find(params[:val]).id}"%>
    <br>
    <div class='actions'>
      <button name="button" class="btn btn-info defaut_button" type="submit">Next</button>
      <button class="btn btn-info button-gray">Cancel</button>
    </div>
  <% end %>
</div>