<div class="form-content">
  <h1> Set password </h1>
  <%= simple_form_for(@teacher, url: update_password_teacher_path(token: params[:token]), method: :patch, html: {class: 'form-horizontal'}) do |f| %>
    <%= f.hidden_field :invitation_token %>
    <%= f.input :email, input_html: {readonly: true} %>  
    <em>(8 characters minimum)</em><br />
    <%= f.input :password, label: "Password", autofocus: true, autocomplete: "off" %>
    <%= f.input :password_confirmation, label: "Confirm password", autofocus: true, autocomplete: "off" %>

    <div class="form-actions">
      <%= f.submit "Set Password", class: 'btn btn-custom' %>
    </div>

  <% end %>
</div>
