<%= simple_form_for(@teacher) do |f| %>
  <div class='form-group'>
    <%= f.label :name, 'Name' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :postal_code, 'Postal Code' %>
    <%= f.text_field :postal_code, class: 'form-control' %>
  </div>

  <div class='actions'>
    <%= f.submit 'Submit'%>
  </div>

<% end %>
