<div id = 'first_step_born'>
  <div class="SearchCriteriaQuestions-progress">
    <div class="ProgressBar">
      <div class="ProgressBar-progress " style="width: 0%;"></div>
    </div>
  </div>
  <div class="SearchCriteriaQuestions-body">
    <h3 class="SearchCriteriaQuestions-title">What month was your child born?</h3>
    <svg class="SearchCriteriaQuestions-image " viewBox="0 0 154 151" aria-labelledby="tid2d7e4dc9-2564-486c-b809-ce1f219c71c8 " xmlns="http://www.w3.org/2000/svg">
      <title id="tid2d7e4dc9-2564-486c-b809-ce1f219c71c8">Search</title>
      <g fill="none" fill-rule="evenodd">
        <path d="M68.22 3C37.742 3 13.034 27.625 13.034 58s24.708 55 55.186 55 55.187-24.625 55.187-55H68.22V3z" fill="#FD9688"></path>
        <path d="M63.203 3C29.953 3 3 29.863 3 63c0 33.138 26.954 60 60.203 60 33.25 0 60.204-26.862 60.204-60H63.203V3zM33.726 22.564c1.14-.827 2.316-1.607 3.522-2.34" stroke="#27345B" stroke-width="5" stroke-linecap="round" stroke-linejoin="round"></path>
        <path d="M13.034 63c0-1.51.068-3.002.198-4.48.133-1.473.33-2.93.587-4.367.257-1.435.58-2.85.957-4.243.382-1.39.818-2.757 1.312-4.097.493-1.343 1.043-2.656 1.645-3.94.604-1.283 1.262-2.538 1.966-3.76.71-1.223 1.466-2.413 2.272-3.568.805-1.155 1.658-2.275 2.553-3.355.896-1.082 1.836-2.125 2.822-3.128M151 50.5h-17.56L123.408 63M40.627 138c0 5.523-4.493 10-10.034 10-5.54 0-10.034-4.477-10.034-10s4.492-10 10.033-10c5.54 0 10.034 4.477 10.034 10zM105.847 138c0 5.523-4.492 10-10.033 10-5.542 0-10.034-4.477-10.034-10s4.492-10 10.034-10c5.54 0 10.033 4.477 10.033 10z" stroke="#27345B" stroke-width="5" stroke-linecap="round" stroke-linejoin="round"></path>
      </g>
    </svg>
    <%= form_tag(child_birth_parents_path, id: 'select_birth_date', method: :get, remote: true)do %>
      <div class="Grid  Grid--skinnyGutters    ">
        <div class="Grid-cell   ">
          <div class="SelectInput">
            <%= hidden_field_tag "teacher_profile", teacher_profile.id %>
            <%= select_month(14, {use_two_digit_numbers: true, prompt: 'MM'}, class: 'SelectInput-control', required: true)%>
          </div>
        </div>
        <div class="Grid-cell   ">
          <div class="SelectInput">
            <%= select_year(14, { start_year: Date.today.year, end_year: Date.today.year-10, prompt: 'YYYY' }, {class: "SelectInput-control", required: true})%>
          </div>
        </div>
        <div class="Grid-cell  Grid-cell--flexNone ">
        <button class="Button     Button--large Button--arrow  " type="submit">Next</button></div>
      </div>
    <% end %>
  </div>
</div>