  $(function() {
    $("#next_born_body").hide();
    $("#email_body").hide();
    $("#sing_up_body").hide();
    $(".next_born_btn").click(function(event) {
        event.preventDefault();
        $('#first_step_born').hide();
        $("#next_born_body").toggle();
    });

    $(".second_step_btn").click(function(event) {
