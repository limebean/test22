<div class="form-content custom-form-content">
  <%= form_for(@parent, url: payment_parent_path(@parent), method: :post, html: { class: 'make_payment' }) do |f| %>
    <span class="payment-errors"></span>
    <div>
    <h3 class="text_card"> Card Information </h3>
    <%= hidden_field_tag "enroll_id", params[:enroll_id] %>
    <div class="content_center">
      <div class="form-group">
        <label for="frmCCNum">Card Number</label>&nbsp;&nbsp;
        <input name= "cardnumber" id="frmCCNum" class="cstm_input_card_number" placeholder="Card number" maxlength="16" data-stripe="number" required autocomplete="cc-number" />
      </div>
      <div class="form-group">
        <label for="frmCCCVC">Security Code</label>&nbsp;&nbsp;
        <input name="cvc" id="frmCCCVC" class="cstm_input_security_text" placeholder="3-4 digit code" maxlength="4" type="password"  data-stripe="cvc" required autocomplete="cc-csc"/>
      </div>
      <div class="form-group">
        <label for="frmCCExp" class="pull">Expiration</label>
        <span class="expire_col">
          <input name="ccmonth" id="frmCCExp" class="cstm_input expire_time" placeholder="MM" maxlength="2" type="text" data-stripe="exp-month" autocomplete="cc-exp-month"/>
          <input name="ccyear" id="frmCCExp" class="cstm_input expire_time" maxlength="4" placeholder="YYYY" type="text"  data-stripe="exp-year" autocomplete="cc-exp-year"/>
        </span>
      </div><br><br>
    </div>
  </div>
  <div>
    <button name="button" type="submit" class="btn btn-primary">Submit</button>
  </div>
  <% end %>
</div>

